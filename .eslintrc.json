{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": [
       "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error", { 
            "trailingComma": "es5",
            "tabWidth": 2,
            "semi": false,
            "singleQuote": false
        }]
    }
}
